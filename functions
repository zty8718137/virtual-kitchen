Grant Select on mydb.accomplishment to 'StudentJM'@'%';
Grant Select on mydb.enrollment to 'StudentJM'@'%';
Grant Select on mydb.enrollment to 'StudentJM'@'%';
revoke all on mydb.* from 'StudentJm'@'%';


